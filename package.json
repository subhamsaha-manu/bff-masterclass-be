{
  "name": "quiz-app-backend",
  "version": "2.0.0",
  "main": "index.ts",
  "scripts": {
    "build": "tsc && copyfiles tsconfig.json dist && copyfiles *.graphql dist && copyfiles \"src/**/*.graphql\" dist && copyfiles \"generated/**/*.graphql\" dist",
    "serve": "PORT=9006 LOCAL_MACHINE=true nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.test.ts' --exec TS_NODE_FILES=true ts-node -r tsconfig-paths/register index.ts",
    "clean": "rm -rf dist/* ",
    "lint-staged": "lint-staged",
    "lint": "eslint --fix './src/**/*.{ts,js}' --ignore-path .gitignore --color",
    "pretty": "prettier-standard 'src/**/*.ts'",
    "type-check": "tsc --noEmit",
    "generate:all": "npm run generate:clean && npm run chimp",
    "generate:clean": "rm -rf generated/graphql",
    "chimp": "chimp generate -p ./src/modules",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "start": "NODE_ENV=production ts-node -r tsconfig-paths/register index.ts",
    "postinstall": "npm run generate:all",
    "start-build": "ts-node -r tsconfig-paths/register dist/index.js"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "npm run lint",
      "git add"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/federation": "0.17.0",
    "@graphql-tools/schema": "^6.0.18",
    "@sendgrid/mail": "^7.6.2",
