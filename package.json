    "apollo-server-env": "^2.4.5",
    "apollo-server-express": "^2.19.1",
    "app-root-path": "^3.0.0",
    "bcrypt": "^5.0.1",
    "bcryptjs": "2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.16.4",
    "graphql": "15.5.0",
    "graphql-import": "1.0.2",
    "graphql-playground-middleware-express": "^1.7.12",
